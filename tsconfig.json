{
    "compilerOptions": {
        "target": "esnext", // Target the latest stable ECMAScript version
        "module": "esnext", // Use ES modules
        "lib": ["dom", "esnext"], // Include DOM and latest ECMAScript library types
        "jsx": "react", // Enable JSX for React
        "sourceMap": true, // Generate source maps
        "strict": true, // Enable strict type checking
        "moduleResolution": "node", // Resolve modules in a Node.js-like manner
        "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
        "resolveJsonModule": true, // Include modules imported from `.json` files
        "outDir": "dist", // Specify the output directory for the compiled files
        "baseUrl": ".", // Specify the base directory to resolve non-relative module names
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*" // Include all TypeScript files in the src directory
    ],
    "exclude": [
        "node_modules" // Exclude the node_modules directory
    ]
}
